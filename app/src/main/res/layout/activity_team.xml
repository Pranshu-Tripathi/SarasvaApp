<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".TeamActivity">
    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background = "@color/colorPrimary"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Team"
                android:textAlignment="center"
                android:textSize="36sp"
                android:textColor="@color/backRed"
                android:fontFamily="@font/almendra_display"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_text_team_page"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:text="Coordinators"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_cordi_linera_layout_team_page"
                android:padding = "10dp"
                >
                <GridView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:numColumns="3"
                    android:id="@+id/coordinatorGridView"/>
                <ProgressBar
                    android:id="@+id/progress_bar_cordi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-120dp"/>
            </LinearLayout>


            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_text_team_page"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                android:paddingLeft="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Senior Members"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_cordi_linera_layout_team_page"
                android:padding = "10dp">
                <GridView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:numColumns="3"
                    android:id="@+id/membersGridViewSenior"/>
                <ProgressBar
                    android:id="@+id/progress_bar_members_senior"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-100dp"/>
            </LinearLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_text_team_page"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                android:paddingLeft="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Members"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_cordi_linera_layout_team_page"
                android:padding = "10dp">
                <GridView
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:numColumns="3"
                    android:id="@+id/membersGridView"/>
                <ProgressBar
                    android:id="@+id/progress_bar_members"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-450dp"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
