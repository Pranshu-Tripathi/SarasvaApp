<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".TeamActivity">
    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background = "@color/colorPrimary"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The Team"
                    android:textAlignment="center"
                    android:textSize="36sp"
                    android:layout_weight="5"
                    android:textColor="@color/backRed"
                    android:fontFamily="@font/almendra_display"
                    android:textStyle="bold"/>

                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:layout_marginEnd="10dp"
                    >
                </ProgressBar>
            </LinearLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_text_team_page"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:text="Coordinators"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_cordi_linera_layout_team_page"
                android:padding = "10dp"
                >
                <com.example.sarasva.ExpandableHeightGridView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="3"
                    android:id="@+id/coordinatorGridView"/>

            </LinearLayout>


            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_text_team_page"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                android:paddingLeft="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Senior Members"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_cordi_linera_layout_team_page"
                android:padding = "10dp">
                <com.example.sarasva.ExpandableHeightGridView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="3"
                    android:stretchMode="columnWidth"
                    android:id="@+id/membersGridViewSenior"/>

            </LinearLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_text_team_page"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                android:paddingLeft="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Members"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_cordi_linera_layout_team_page"
                android:padding = "10dp">
                <com.example.sarasva.ExpandableHeightGridView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="3"
                    android:id="@+id/membersGridView"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>

